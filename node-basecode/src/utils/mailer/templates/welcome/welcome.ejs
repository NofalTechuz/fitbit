<% let outletStyle=` <style>
    .container {
    width: 90%;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 8px;
    }

    .header {
    background-color: #007bff;
    color: #fff;
    padding: 10px 0;
    text-align: center;
    border-radius: 8px 8px 0 0;
    }

    .content {
    padding: 20px;
    }

    .footer {
    text-align: center;
    padding: 10px;
    font-size: 0.8em;
    color: #777;
    }
    </style>`; %>


    <% let content=` <section class="container">
        <header class="header">
            <h1>Welcome ${firstName}!</h1>
        </header>
        <section class="content">
            <p>Thank you for joining the Fitbit Family! We're excited to have you on board.</p>
            <p>To get started, please visit the following link:</p>
            <p><a href="https://fitbit-admin.netlify.app">Fitbit.com</a></p>
            <p>If you have any questions, feel free to reply to this email.</p>
        </section>
        <footer class="footer">
            <p>Best Regards,</p>
            <p>The Fitbit Team</p>
        </footer>
        </section>
        ` %>

        <%- include('../common/layout', { title: 'Welcome to Fitbit Family!' , content: content, outletStyle:
            outletStyle }) %>